<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/head') %>
<body>
    <%- include('../../layout/header') %>
    <main>
        <div class="title">
            <p>Search Results</p>
        </div>
        <% data.forEach((data,indexx) =>{ %>
            <div class="container flexCol show">
                <img src="<%= data.image_url %>" alt="">
                <h1><%= data.title %></h1>
                <h3><%= data.author %></h3>
                <p><%= data.description %></p>
                <form class="postFormSelectedBook" action="/books" method="POST">
                    <input type="hidden" value="<%= indexx %>" name="id">
                    <button id="selectButton">Select this Book</button>
                </form>
            </div>
        <% }) %>
    </main>
    <%- include('../../layout/footer') %>
</body>

</html>



